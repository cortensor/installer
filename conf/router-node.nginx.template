# ROUTER_DOMAIN_PLACEHOLDER - This line will be replaced during installation
# The installer script will replace ROUTER_DOMAIN_PLACEHOLDER with the actual domain

server {
    server_name ROUTER_DOMAIN_PLACEHOLDER;
    
    # Block all requests by default
    location / {
        return 404;
    }
    
    # Public about/metadata endpoint (maps to /api/v1/about on router API)
    location /about {
        proxy_pass http://127.0.0.1:5010/api/v1/about;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    # MCP server (HTTP/SSE) on localhost:8000, exposed under /mcp/legacy
    # Example: https://ROUTER_DOMAIN_PLACEHOLDER/mcp/legacy/messages
    location /mcp/legacy {
        # Strip /mcp prefix so backend sees /messages, etc.
        proxy_pass http://127.0.0.1:8000/messages;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Streaming/SSE-friendly settings
        proxy_buffering off;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        tcp_nodelay on;
        tcp_nopush off;
        proxy_buffer_size 4k;
        proxy_read_timeout 300s;
    }
    
    # MCP server (HTTP/SSE) on localhost:8000, exposed under /mcp
    # Example: https://ROUTER_DOMAIN_PLACEHOLDER/mcp/messages
    location /mcp {
        # Strip /mcp prefix so backend sees /messages, etc.
        proxy_pass http://127.0.0.1:8001/messages;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Streaming/SSE-friendly settings
        proxy_buffering off;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        tcp_nodelay on;
        tcp_nopush off;
        proxy_buffer_size 4k;
        proxy_read_timeout 300s;
    }
    
    # MCP server (HTTP/SSE) on localhost:8000, exposed under /mcp/messages
    # Example: https://ROUTER_DOMAIN_PLACEHOLDER/mcp/messages
    location /mcp/messages {
        # Strip /mcp prefix so backend sees /messages, etc.
        proxy_pass http://127.0.0.1:8001/messages;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Streaming/SSE-friendly settings
        proxy_buffering off;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        tcp_nodelay on;
        tcp_nopush off;
        proxy_buffer_size 4k;
        proxy_read_timeout 300s;
    }
    
    # MCP server (HTTP/SSE) on localhost:8000, exposed under /messages
    # Example: https://ROUTER_DOMAIN_PLACEHOLDER/messages
    location /messages {
        # Strip /mcp prefix so backend sees /messages, etc.
        proxy_pass http://127.0.0.1:8000/messages;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Streaming/SSE-friendly settings
        proxy_buffering off;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        tcp_nodelay on;
        tcp_nopush off;
        proxy_buffer_size 4k;
        proxy_read_timeout 300s;
    }
    
    # Allow specific endpoints
    location /api/v1/completions {
        # CORS configuration
        if ($request_method = 'OPTIONS') {
            # Preflight request handling
            add_header 'Access-Control-Allow-Origin' $cors_allowed_origin;
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
            add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type, X-API-Key';
            add_header 'Access-Control-Max-Age' 1728000; # 20 days
            add_header 'Content-Type' 'text/plain charset=UTF-8';
            add_header 'Content-Length' 0;
            return 204;
        }
        
        # Permissive CORS (all origins - uncomment if needed)
        # add_header 'Access-Control-Allow-Origin' '*' always;
        
        # Restricted CORS (specific origins)
        add_header 'Access-Control-Allow-Origin' $cors_allowed_origin always;
        add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS' always;
        add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type, X-API-Key' always;
        
        proxy_pass http://127.0.0.1:5010;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Streaming optimization settings
        proxy_buffering off;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        tcp_nodelay on;
        tcp_nopush off;
        proxy_buffer_size 4k;
        proxy_read_timeout 300s;
    }
    
    # v2 completions endpoint (off-chain prompt storage)
    location /api/v2/completions {
        proxy_pass http://127.0.0.1:5010;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Streaming optimization settings (same as /api/v1/completions)
        proxy_buffering off;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        tcp_nodelay on;
        tcp_nopush off;
        proxy_buffer_size 4k;
        proxy_read_timeout 300s;
    }

    # x402-protected completions endpoint
    location /api/v1/x402/completions {
        proxy_pass http://127.0.0.1:5010;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Streaming optimization settings (same as /api/v1/completions)
        proxy_buffering off;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        tcp_nodelay on;
        tcp_nopush off;
        proxy_buffer_size 4k;
        proxy_read_timeout 300s;
    }
    
    # Add more allowed endpoints as needed
    location /api/v1/status {
        ### START CORS CONFIG SNIPPET ###
        # CORS configuration
        if ($request_method = 'OPTIONS') {
            # Preflight request handling
            add_header 'Access-Control-Allow-Origin' $cors_allowed_origin;
            add_header 'Access-Control-Allow-Methods' 'GET, OPTIONS';
            add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type, X-API-Key';
            add_header 'Access-Control-Max-Age' 1728000; # 20 days
            add_header 'Content-Type' 'text/plain charset=UTF-8';
            add_header 'Content-Length' 0;
            return 204;
        }
        
        # Restricted CORS (specific origins)
        add_header 'Access-Control-Allow-Origin' $cors_allowed_origin always;
        add_header 'Access-Control-Allow-Methods' 'GET, OPTIONS' always;
        add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type, X-API-Key' always;
        ### END CORS CONFIG SNIPPET ###
        
        proxy_pass http://127.0.0.1:5010;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    location /api/v1/miners {
        proxy_pass http://127.0.0.1:5010;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    location /api/v1/sessions {
        proxy_pass http://127.0.0.1:5010;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    location /api/v1/info {
        proxy_pass http://127.0.0.1:5010;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    # Router about/metadata endpoint
    location /api/v1/about {
        proxy_pass http://127.0.0.1:5010;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    location /api/v1/tasks {
        proxy_pass http://127.0.0.1:5010;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    location /api/v1/ping {
        proxy_pass http://127.0.0.1:5010;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    # x402-protected ping endpoint
    location /api/v1/x402/ping {
        proxy_pass http://127.0.0.1:5010;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/ROUTER_DOMAIN_PLACEHOLDER/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/ROUTER_DOMAIN_PLACEHOLDER/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    if ($host = ROUTER_DOMAIN_PLACEHOLDER) {
        return 301 https://$host$request_uri;
    } # managed by Certbot
    listen 80;
    server_name ROUTER_DOMAIN_PLACEHOLDER;
    return 404; # managed by Certbot
}
